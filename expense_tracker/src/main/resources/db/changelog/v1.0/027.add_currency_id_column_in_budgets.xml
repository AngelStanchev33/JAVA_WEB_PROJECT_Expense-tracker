<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1.0.27" author="Angel">
        <comment>"add currency column in budgets"</comment>
        <addColumn tableName="budgets">
            <column name="currency_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="budgets" baseColumnNames="currency_id"
                                 constraintName="fk_budgets_currency" referencedTableName="budgets"
                                 referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>