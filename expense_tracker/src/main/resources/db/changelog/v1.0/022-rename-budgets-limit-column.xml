<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
       http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="v1.0-022" author="Angel">
        <comment>Rename 'limit' column to 'budget_limit' to avoid MySQL reserved keyword conflict</comment>
        
        <renameColumn tableName="budgets" 
                      oldColumnName="limit" 
                      newColumnName="budget_limit" 
                      columnDataType="DECIMAL(19,2)"/>
    </changeSet>
</databaseChangeLog>