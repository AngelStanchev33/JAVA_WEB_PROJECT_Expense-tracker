<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="1.0.29" author="Angel">
        <comment>Remove duplicate related_budget_id and related_expense_id columns from notifications table</comment>
        
        <!-- Drop foreign key constraints first -->
        <dropForeignKeyConstraint baseTableName="notifications" constraintName="fk_notifications_budget_id"/>
        <dropForeignKeyConstraint baseTableName="notifications" constraintName="fk_notifications_expense_id"/>
        
        <!-- Drop the columns -->
        <dropColumn tableName="notifications" columnName="related_budget_id"/>
        <dropColumn tableName="notifications" columnName="related_expense_id"/>
    </changeSet>

</databaseChangeLog>